<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/rounded_border"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp"
    android:layout_marginBottom="12dp"
    >

    <LinearLayout
        android:id="@+id/bg_item_hotel"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bg_image_hotel"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/travel01"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-2dp" />

        <ImageView
            android:id="@+id/bg_avatar_hotel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            />


    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
            android:layout_marginBottom="@dimen/fab_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtHotelName"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chua  Ha Noi"
            android:textSize="25dp"
            />
        <TextView
            android:id="@+id/txtHotelPrice"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/orange_red"
            android:textStyle="bold"
            android:text="2.000.000"
            android:textSize="25dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_type"
                />
            <TextView
                android:id="@+id/txtHotelAddress"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>